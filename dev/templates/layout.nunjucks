{% import '../templates/partials/header.nunjucks' as header %}
{% import '../templates/partials/footer.nunjucks' as footer %}
{% import '../templates/partials/content.nunjucks' as content %}

<!DOCTYPE html>
<html lang="en">
<head>
  <title>Eidetus</title>
  <meta charset="UTF-8">
  <meta name="description" content="Eidetus is a strategic, team-based B.Y.O.H. (Build Your Own Hero) shooter set in a dystopian sci-fi landscape. While your psypher channels memories into psychic power, draw from the deck of abilities you've assembled to defeat your opponents.">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  <link href="{{ relative_path }}app/css/main.css" rel="stylesheet" type="text/css"/>
  <link href="{{ relative_path }}app/img/favicon.ico" rel="shortcut icon"/>
</head>
<body>
  <div id="main-container" class="main-container">  
    
    {{ header.header(relative_path, header_class) }}

    {% block content %} {% endblock %}

    <h2 id="newsletter" class="text-upper text-center"><strong>Get Connected</strong></h2>

    <div class="text-center">
      <a class="button" modal-ID="newsletter-modal">Lose your mind to Eidetus!</a>
    </div>

    {% call content.modal('newsletter-modal') %}

    <h3 class="text-center text-upper marg-bottom-4">Sign-up to our newsletter</h3>
    <div id="mc_embed_signup">
      <form action="//expletivestudios.us15.list-manage.com/subscribe/post?u=2e07229fedd317f43de1a7336&amp;id=9132aaa9b3" method="post" id="mc-embedded-subscribe-form" name="mc-embedded-subscribe-form" class="validate" target="_blank" novalidate>
          <div id="mc_embed_signup_scroll">
        <input type="email" value="" name="EMAIL" class="email" id="mce-EMAIL" placeholder="email address" required size="35">
          <div style="position: absolute; left: -5000px;" aria-hidden="true"><input type="text" name="b_2e07229fedd317f43de1a7336_9132aaa9b3" tabindex="-1" value=""></div>&nbsp;&nbsp;&nbsp;<input type="submit" value="Sign-up" name="subscribe" id="mc-embedded-subscribe" class="button button--attention button--full-width">
          </div>
      </form>
    </div>

    {% endcall %}

    <p class="text-center">
      Don't forget to follow <strong>@Eidetus</strong> on all social media for the latest updates on our upcoming game.
    </p>

    {{ content.social_links(relative_path) }}

    {{ footer.footer(relative_path) }}

  </div>
  <footer><script src="{{ relative_path }}app/js/main.js"></script></footer>
</body>
</html>
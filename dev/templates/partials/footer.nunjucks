{#
Social media and newsletter sign-up form
@param path - prefix relative path for subpages
#}
{% macro social_links(path) %}

<h2 id="newsletter" class="text-upper text-center"><strong>Get Connected</strong></h2>

<div class="text-center">
	<a class="button" reveal-modal="newsletter-modal">Lose your mind to the Eidetus!</a>
</div>

<div class="marg-bottom-2 text-center">
	<ul class="buttons">
		<li><a class="footer__social-link" target="_blank" href="https://www.facebook.com/eidetus"><img src="{{ path }}app/img/icon-social-facebook.png"></a></li>
		<li><a class="footer__social-link" target="_blank" href="https://www.instagram.com/eidetus/"><img src="{{ path }}app/img/icon-social-instagram.png"></a></li>
		<li><a class="footer__social-link" target="_blank" href="https://twitter.com/eidetus"><img src="{{ path }}app/img/icon-social-twitter.png"></a></li>
		<li><a class="footer__social-link" target="_blank" href="https://www.youtube.com/channel/UCfYoz2i0xDxTJ7hoYtRK5Tw"><img src="{{ path }}app/img/icon-social-youtube.png"></a></li>
		<li><a class="footer__social-link" target="_blank" href="https://www.reddit.com/r/Eidetus/"><img src="{{ path }}app/img/icon-social-reddit.png"></a></li>
	</ul>
</div>

<div id="newsletter-modal" class="modal__container" close-modal="">
	<div class="modal">
		<div class="modal__button--close"><i class="material-icons" close-modal="">close</i></div>
		<!-- Begin MailChimp Signup Form -->
		<div id="mc_embed_signup">
			<form action="//expletivestudios.us15.list-manage.com/subscribe/post?u=2e07229fedd317f43de1a7336&amp;id=9132aaa9b3" method="post" id="mc-embedded-subscribe-form" name="mc-embedded-subscribe-form" class="validate" target="_blank" novalidate>
			    <div id="mc_embed_signup_scroll">
				<input type="email" value="" name="EMAIL" class="email" id="mce-EMAIL" placeholder="email address" required size="35">
			    <!-- real people should not fill this in and expect good things - do not remove this or risk form bot signups-->
			    <div style="position: absolute; left: -5000px;" aria-hidden="true"><input type="text" name="b_2e07229fedd317f43de1a7336_9132aaa9b3" tabindex="-1" value=""></div>&nbsp;&nbsp;&nbsp;<input type="submit" value="Sign-up to our newsletter" name="subscribe" id="mc-embedded-subscribe" class="button button--attention button--full-width">
			    </div>
			</form>
		</div>
		<!-- End MailChimp Signup Form -->
	</div>
</div>

{% endmacro %}
